{
  "name": "HitStory",
  "description": "Switch all fonts on everysite to Alef & click to make paragraphs blue.",
  "version": "1.0",

  "permissions": [
    "activeTab", "tabs", "<all_urls>","storage","browsingData"

  ],
  
  "browser_action": {
      "default_icon": {
	  "19": "images/icon-19.png"           // optional
	},
      "default_title": "HitStory",      // optional; shown in tooltip
      "default_popup": "panel.html"        // optional
  },

  "omnibox": { "keyword" : "history" 
  },


  "content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["js/example.js"],
		"css": ["css/main.css"]
  }],

  "manifest_version": 2
}